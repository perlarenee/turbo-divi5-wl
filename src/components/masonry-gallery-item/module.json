{
  "name": "turbo/masonry-gallery-item",
  "d4Shortcode": "",
  "title": "Gallery Item",
  "titles": "Gallery Items",
  "category": "child-module",
  "moduleClassName": "masonry_gallery__item",
  "moduleOrderClassName": "masonry_gallery__item",
  "attributes": {
    "module": {
      "type": "object",
      "selector": "{{selector}}",
      "default": {
        "meta": {
          "adminLabel": {
            "desktop": {
              "value": "Gallery Item"
            }
          }
        }
      },
      "settings": {
        "advanced": {
          "htmlAttributes": {}
        }
      }
    },
    "image": {
      "type": "object",
      "default": {
        "innerContent": {
          "desktop": {
            "value": ""
          }
        }
      },
      "settings": {
        "innerContent": {
          "groupType": "group-item",
          "item": {
            "groupSlug": "contentImage",
            "priority": 10,
            "render": true,
            "label": "Image",
            "description": "Upload an image for this gallery item.",
            "features": {
              "sticky": false,
              "responsive": false,
              "hover": false,
              "dynamicContent": false
            },
            "component": {
              "type": "field",
              "name": "divi/upload"
            }
          }
        }
      }
    },
    "caption": {
      "type": "object",
      "default": {
        "innerContent": {
          "desktop": {
            "value": ""
          }
        }
      },
      "settings": {
        "innerContent": {
          "groupType": "group-item",
          "item": {
            "groupSlug": "contentImage",
            "priority": 20,
            "render": true,
            "label": "Caption",
            "description": "Optional caption for this image.",
            "features": {
              "sticky": false,
              "responsive": false,
              "hover": false,
              "dynamicContent": false
            },
            "component": {
              "name": "divi/text",
              "type": "field"
            }
          }
        }
      }
    },
    "showCaption": {
      "type": "object",
      "default": {
        "innerContent": {
          "desktop": {
            "value": "off"
          }
        }
      },
      "settings": {
        "innerContent": {
          "groupType": "group-item",
          "item": {
            "groupSlug": "contentImage",
            "priority": 30,
            "render": true,
            "label": "Show Caption",
            "description": "Display the caption on hover.",
            "features": {
              "sticky": false,
              "responsive": false,
              "hover": false,
              "dynamicContent": false
            },
            "component": {
              "name": "divi/toggle",
              "type": "field"
            }
          }
        }
      }
    },
    "rowSpan": {
      "type": "object",
      "default": {
        "innerContent": {
          "desktop": {
            "value": {
              "rowSpan": "1"
            }
          }
        }
      },
      "settings": {
        "innerContent": {
          "groupType": "group-item",
          "item": {
            "groupSlug": "contentImage",
            "priority": 40,
            "render": true,
            "subName": "rowSpan",
            "label": "Row Span (Manual Mode)",
            "description": "Number of rows this item should span (1-4). Only used when auto-detect is OFF.",
            "features": {
              "sticky": false,
              "responsive": false,
              "hover": false,
              "dynamicContent": false
            },
            "component": {
              "type": "field",
              "name": "divi/select",
              "props": {
                "options": {
                  "1": {"label": "1 Row"},
                  "2": {"label": "2 Rows"},
                  "3": {"label": "3 Rows"},
                  "4": {"label": "4 Rows"}
                }
              }
            }
          }
        }
      }
    },
    "columnSpan": {
      "type": "object",
      "default": {
        "innerContent": {
          "desktop": {
            "value": {
              "columnSpan": "1"
            }
          }
        }
      },
      "settings": {
        "innerContent": {
          "groupType": "group-item",
          "item": {
            "groupSlug": "contentImage",
            "priority": 50,
            "render": true,
            "subName": "columnSpan",
            "label": "Column Span (Manual Mode)",
            "description": "Number of columns this item should span (1-4). Only used when auto-detect is OFF.",
            "features": {
              "sticky": false,
              "responsive": false,
              "hover": false,
              "dynamicContent": false
            },
            "component": {
              "type": "field",
              "name": "divi/select",
              "props": {
                "options": {
                  "1": {"label": "1 Column"},
                  "2": {"label": "2 Columns"},
                  "3": {"label": "3 Columns"},
                  "4": {"label": "4 Columns"}
                }
              }
            }
          }
        }
      }
    }
  },
  "customCssFields": {},
  "settings": {
    "content": "auto",
    "advanced": "auto",
    "groups": {
      "contentImage": {
        "panel": "content",
        "priority": 10,
        "groupName": "contentImage",
        "multiElements": true,
        "component": {
          "name": "divi/composite",
          "props": {
            "groupLabel": "Image"
          }
        }
      }
    }
  }
}
